<body>
    <!-- Navigation-->
    <!-- Product section-->
    <section class="py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="row gx-4 gx-lg-5 align-items-center">
                <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="@product.Image" alt="..." /></div>
                <div class="col-md-6">
                    <div class="small mb-1">SKU: @category.Name</div>
                    <h1 class="display-5 fw-bolder">@product.Name</h1>
                    <div class="fs-5 mb-5">
                        <span class="text-decoration-line-through">$40.00</span>
                        <span>@product.Price</span>
                    </div>
                    <div id="variant-swatch-1" class="swatch clearfix" data-option="option2" data-option-index="1">

                        <div style="display: flex;align-items: center;margin-bottom:0.625em">
                            <div keylanguage="kich_thuoc" class="header lang" style="margin-right: 0.3125em;width: 50% ;font-size:14px">Kích thước</div>
                            <label style="width: 50%;display: flex;justify-content: flex-end;" class="clickClose" for="modal-btn"><span class="lang" keylanguage="bang_size" style="font-size: 0.625em;cursor:pointer;font-weight: 400;color: #909090;text-decoration: underline;">BẢNG SIZE</span><i class="uil uil-expand-arrows"></i></label>
                        </div>
                        <div class="select-swap " style="display: flex">
                            <div data-value="S" class="n-sd swatch-element s" style="background: pink; padding: 10px; border: 1px solid; border-radius: 10px">
                                <input class="variant-1" id="swatch-1-s" type="radio" name="option2" value="S" data-vhandle="s" checked="">

                                <label for="swatch-1-s" class="sd">
                                    <span style="font-size:14px">S</span>
                                </label>

                            </div> 
                            <div data-value="M" class="n-sd swatch-element m"  style="background: pink; padding: 10px; border: 1px solid; border-radius: 10px">
                                <input class="variant-1" id="swatch-1-m" type="radio" name="option2" value="M" data-vhandle="m">

                                <label for="swatch-1-m">
                                    <span style="font-size:14px">M</span>
                                </label>

                            </div>
                            <div data-value="L" class="n-sd swatch-element l"  style="background: pink; padding: 10px; border: 1px solid; border-radius: 10px;">
                                <input class="variant-1" id="swatch-1-l" type="radio" name="option2" value="L" data-vhandle="l">

                                <label for="swatch-1-l">
                                    <span style="font-size:14px">L</span>
                                </label>
                            </div>

                        </div>
                    </div>
                    <p class="lead" style="font-size:14px"><p>@product.Description</p></p>
                    <div class="d-flex">
                        <input class="form-control text-center me-3" id="inputQuantity" type="num" value="1" style="max-width: 3rem" />
                        <button class="btn btn-outline-dark flex-shrink-0" type="button" style="font-size:14px">
                            <i class="bi-cart-fill me-1"></i>
                            Add to cart
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Related items section-->
    <section class="py-5 bg-light">
        <div class="container px-4 px-lg-5 mt-5">
            <h2 class="fw-bolder mb-4"><a href="">All Products</a></h2>
            <div class="row gx-4 gx-lg-5 row-cols-1 row-cols-md-3 row-cols-xl-4 justify-content-center">

                @foreach (var item in relateProducts)
                {
                    var url = "/chi-tiet/" + item.MetaTitle + "-" + item.ID;
                    <div class="col mb-5">
                        <div class="card h-100">
                            <!-- Product image-->
                            <a href="@url">
                                <img class="card-img-top" src="@item.Image" alt="..." />
                            </a>
                                <!-- Product details-->
                                <div class="card-body p-4">

                                    <div class="text-center">
                                        <!-- Product name-->
                                        <h5 class="fw-bolder">@item.Name</h5>
                                        <!-- Product price-->
                                        @item.Price
                                    </div>
                                </div>
                                <!-- Product actions-->
                                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                    <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="/them-gio-hang?productId=@item.ID&quantyli=1">Add to card</a></div>
                                </div>
                        </div>
                    </div>
                }

