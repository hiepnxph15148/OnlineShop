@{
    ViewBag.Title = "Detail";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    var product = (Model.EF.Product)ViewBag.ProductDetail;
    var category = (Model.EF.ProductCategory)ViewBag.Category;
    var relateProducts = (List<Model.EF.Product>)ViewBag.RelatedProducts;
    //var test = category.Name;
